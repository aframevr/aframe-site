.credits {
  background: url("../images/mozvr-white.svg") 45% 60% no-repeat;
  background-size: 80% 80%;
  position: absolute;
  bottom: 0;
  right: 0;
  height: 50px;
  width: 90px;
  margin: 0px 20px 20px;
}
.credits:hover {
  background-color: rgba(0,0,0,0.1);
}
.examples-subnav {
  margin-top: 0.5rem;
}
.btn-index {
  color: #fff;
}
.content--index {
  flex-direction: row;
}
.content--index .aframe-animation {
  background-color: #24caff;
  position: relative;
  width: 65%;
}
.content--index .copy__wrap {
  width: 35%;
  min-width: 440px;
}
.content--index .slogan {
  color: #fff;
  font-size: 2.5rem;
  font-weight: 300;
  line-height: 1.2;
  letter-spacing: -0.05rem;
}
.content--index .intro {
  color: #fff;
  font-size: 1.4rem;
  font-weight: 300;
  line-height: 1.4;
  width: 350px;
}
.content--index .disclaimer {
  color: rgba(255,255,255,0.5);
}
.menu {
  margin-bottom: 60px;
}
.menu-item {
  display: inline-block;
}
.menu-item a {
  font-family: Fira Mono, Andale Mono, Monaco, Courier, monospace;
  text-transform: uppercase;
  color: rgba(0,0,0,0.75);
  margin-right: 20px;
  border: none;
}
.menu-item a:hover {
  color: #000;
  background-color: rgba(0,0,0,0.02);
  border-bottom: 1px solid rgba(0,0,0,0.5);
}
.get-started {
  background-color: #fff;
  border: 3px solid #fff;
  color: #000;
  display: inline-block;
  font: 300px 15px Fira Mono, Andale Mono, Monaco, Courier, monospace;
  letter-spacing: 0.05rem;
  text-align: center;
  transition: 0.05s ease;
  text-transform: uppercase;
  padding: 8px 30px;
  margin-top: 2rem;
}
.get-started:hover {
  background-color: #fff;
  color: #ef2d5e;
}
.get-started:active {
  opacity: 0.8;
}
.mobile-get-started {
  display: none;
}
@media screen and (max-width: 399px) {
  #logo {
    max-width: 40vw;
  }
}
@media screen and (min-width: 480px) {
  .example__viewsource {
    top: 20px;
    right: 20px;
  }
}
@media screen and (min-width: 800px) {
  .example__viewsource {
    top: 30px;
    right: 30px;
  }
}
@media only screen and (max-device-width: 736px) and (orientation: landscape) {
  .sidebar {
    display: none;
  }
}

// Hide items based on compatibility.
// Example: "360 Video" example on mobile until autoplay/inline video UX issues handled properly.
// See https://github.com/aframevr/aframe/issues/316
[data-is-android="true"] [data-supports-android="false"],
[data-is-ios="true"] [data-supports-ios="false"] {
  display: none !important;
}

// Hide BrowserSync notifications.
#__bs_notify__ {
  display: none !important;
}
