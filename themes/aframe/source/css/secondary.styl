@import "_common"
@import "_docs"

.nav
    border-bottom 1px dashed rgba(0,0,0,0.1)
    margin-bottom 20px
    padding 10px 0 20px

.nav-item
    font-family $code-font
    text-transform uppercase

.nav-item + .nav-item
    margin-top 3px

.subnav-item + .subnav-item
    margin-top 5px

.nav-link
    color rgba(0,0,0,0.35)
    padding 10px
    transition 0.1s color ease-in
    &:hover
        color rgba(0,0,0,0.75)
    &:active
        color rgba(0,0,0,0.85)
    &.current,
    &.active,
    &.current:hover,
    &.active:hover
        color $pink
        font-weight 500

.nav-link-version
    color #ccc

.nav-item
    display inline-block
    &:first-child .nav-link
        padding-left 0

.subnav-link
    display block
    color rgba(0,0,0,0.35)
    text-indent: -10px
    padding-left 10px
    transition 0.1s color ease-in
    width 100%
    &:hover
        color rgba(0,0,0,0.75)
    &:active
        color rgba(0,0,0,0.85)
    &.current,
    &.active,
    &.current:hover,
    &.active:hover
        color #333
        font-weight 500

.logo__wordmark
    color $pink
    display inline-block
    font-size 64px
    font-weight 200
    text-transform uppercase

.float-right
     float right

.slogan
    color $white
    font-size 5em
    font-weight 100
    line-height 0.9
    position absolute
    text-transform uppercase
    top 40px
    left 30px
    z-index 2
    width 450px

.example__iframe
    height 100vh
    width 100%

.main
    display flex

.sidebar
    max-width 400px
    padding 30px

.content
    flex 1

@media screen and (max-width: 800px)
    .main
        flex-direction column

.section-title, .section-title a
    color rgba(0,155,155,0.5)

.section-title a
    display block
    &:hover
        color rgba(0,100,100,0.75)

.section-title
    line-height 1.2
    font 11px $mono-font
    margin 20px 0 5px
    text-transform uppercase

.content
    display flex
    flex-direction column

.page__title
    font 600 36px/1.3 $body-font

.copy .footer
    border-top 2px solid #eee
    clear both
    color #999
    font-size 12px
    margin-top 40px

.guide-links
    padding 10px 0

.guide-links + .footer
    margin-top 25px

// We have to target it like this so it doesn't interfere with the code snippets
.copy__wrap > table
    border-collapse collapse
    width 100%

    th, td
        padding 8px 4px

    th
        background #2ac
        font-size 10px
        font-weight normal

    th
        color #fff
        text-align left

    td
        background #fff
        border-bottom 1px solid #eee
        font-size 12px

// Flip this to enable toggles for FAQ sections.
enable_toggles = true

if enable_toggles
    .docs-section-title
        padding-left 15px
        position relative
        &:before
            background url(../images/caret.svg) -3px 0 no-repeat
            background-size contain
            content ""
            position absolute
            top 1px
            height 10px
            left 0
            width 10px
        + ul
            margin-left 15px

    .section-active:before
        transform rotate(90deg)
        top 4px
        left -3px

    .section-inactive
        + .docs-subnav
            display none
