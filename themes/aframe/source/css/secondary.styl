@import "_common"

.content--structured .page__section,
.section-title,
.install-note,
.mobile-nav-btn
    font-family $code-font-default

.font-loaded-mono
  .content--structured .page__section,
  .section-title,
  .install-note,
  .mobile-nav-btn
      font-family $code-font

a
    border-bottom 1px solid rgba(53,196,232,0.15)
    color hsl(192, 80%, 40%)
    position relative
    text-decoration none
    transition 0.05s ease
    &:hover
        border-bottom-color rgba(53,196,232,0.3)
        color hsl(192, 80%, 25%)
    &:active,
    &.click
        border-bottom-color rgba(53,196,232,0.6)
        color rgba(53,196,232,0.9)
        top 1px
        left 0.5px

.copy p a
    margin 0 1px

.nav
    border-top 1px dashed rgba(0,0,0,0.1)
    border-bottom 1px dashed rgba(0,0,0,0.1)
    margin-bottom 30px
    padding 30px 0

.nav-link
    color rgba(0,0,0,0.35)
    display block
    padding 0.25rem 0
    transition 0.05s color ease
    &:hover
        color rgba(0,0,0,0.75)
    &:active
        color rgba(0,0,0,0.85)
    &.current,
    &.active,
    &.current:hover,
    &.active:hover
        color $pink
        font-weight 600

.nav-link-disabled
    pointer-events none

.nav-item
    font-family $code-font
    text-transform uppercase
    &:first-child .nav-link
        padding-top 0
    &:last-child .nav-link
        padding-bottom 0

.subnav-link
    display block
    color rgba(0,0,0,0.35)
    text-indent -10px
    padding-left 10px
    transition 0.05s color ease
    width 100%
    &:hover
        color rgba(0,0,0,0.75)
    &:active
        color rgba(0,0,0,0.85)
    &.current,
    &.active,
    &.current:hover,
    &.active:hover
        color #333
        font-weight 500

.example__iframe
    height 100vh
    width 100%

.main
    display flex

.sidebar
    padding 40px
    width 280px

.content
    flex 1

.content
    display flex
    flex-direction column

.page__title
    font 600 36px/1.3 $body-font-default

.font-loaded-sans .page__title
    font-family $body-font

.copy .footnote
    border-top 2px solid #eee
    clear both
    color #999
    font-size 0.8rem
    margin-top 30px

    br
        display none

    .github-file-link
        margin-left 0.5rem

.guide-links
    margin-top 30px

// We have to target it like this so it doesn't interfere with the code snippets
.copy__wrap > table
    border-collapse collapse
    width 100%

    th, td
        padding 4px 8px

    th
        background #2ac
        color #fff
        font-size $table-heading-font-size
        font-weight 400
        line-height 1.8
        text-align left
        white-space nowrap
        + th
            border-left 1px solid rgba(255,255,255,0.1)

    td
        background #fff
        font-size $table-body-font-size
        vertical-align top

    tr:not(:last-child) td
        border-bottom 1px solid #eee

// The sub-heading above the docs title
.content--structured .page__section
    font-size 11px
    font-weight 600
    line-height 1.2
    margin 0 0 5px
    text-transform uppercase
    a
        display block

.section-title,
.subnav-label
    font-size 11px
    line-height 1.2
    padding 5px 0 10px
    text-transform uppercase

.section-title-active
    font-weight 600

.section-title-link
    display block
    margin -5px 0 -10px
    padding 5px 0 10px

.section-subnav
    margin-bottom 10px

.copy .post__heading
    margin-bottom 0

.post__projects
    display flex
    flex-wrap wrap
    margin 15px 0 25px -1px
    a
        background-position center
        background-repeat no-repeat
        background-size cover
        border 2px solid transparent
        height 160px
        margin-bottom 4px
        width 50%
        &:hover
            border-color $copy-link-hover

.post-listing .post__projects a:nth-child(2) ~ a
    display none

.post__projects-text
  li p
    display inline
  .blog-attribution
    border none
    color $medium

.post__timestamp
    font-weight 500

.post__author:before
    content "\00a0|\00a0"

.post__metadata
    align-items center
    display flex
    p
      margin 20px 0 0

.post__image
    display block
    margin-top 20px

.post .guide-links
    .float-right
        text-align right
    span
        max-width 40%

// To prevent the active sections from loading.
prevent_clicks_on_active_links = true

if prevent_clicks_on_active_links
    .section-title-active
        cursor pointer

    .section-title-link-active
        cursor pointer
        pointer-events none

numbered_debug = false

// Useful for changing `order` of docs.
if numbered_debug
    .subnav
        color red
        list-style-type decimal

.section-title
    margin-top 15px

.subnav-item + .subnav-item
    margin-top 0.25rem

.highlight
    position relative
    background-color $codebg
    padding .2em .2em .1em
    line-height 1.1em
    border-radius $radius
    overflow-x auto
    table, tr, td
        width 100%
        border-collapse collapse
        padding 0
        margin 0
    .gutter
        width 1.5em
    .code
        pre
            padding 1.2em 1.4em
            line-height 1.5em
            margin 0
    &.html, &.js, &.bash, &.css
        &:after
            position absolute
            top 0
            right 0
            color #ccc
            text-align right
            font-size .75em
            padding 5px 10px 0
            line-height 15px
            height 15px
            font-weight 600
    &.html:after
        content 'HTML'
    &.js:after
        content 'JS'
    &.bash:after
        content 'Shell'
    &.css:after
        content 'CSS'

.github-file-link
    background $codebg
    border 1px solid $border
    border-radius $radius
    transition 0.05s ease
    color #666
    display inline-block
    padding 0.25rem 1rem
    &:after
        background url(../images/github-icon.svg) no-repeat
        content ''
        display inline-block
        margin-left 0.5em
        opacity .5
        height 14px
        transition 0.05s opacity ease
        vertical-align middle
        width 12px
    &:hover,
    &:active
        border-color $border-dark
        color #333
        &:after
            opacity 1
    &:active
        background rgba(0,0,0,0.1)
        opacity 0.5

.copy
    a.btn  // See `_common` for base styles.
        background-color lighten($blue, 8%)
        border-bottom 2px solid darken($blue, 12%)
        border-radius 4px
        color #fff
        display inline-block
        font-family $code-font
        margin 5px 0
        padding 12px 24px
        transition 0.15s ease
        &.btn-download
            padding 12px 8px
            min-width 220px
        &:hover
            background-color lighten($blue, 15%)
            transform translate(0, 1px)
            transition none
        &:active,
        &.click
            background-color darken($blue, 12%)
            transform translate(0, 2px)
        span
            font-size 0.8rem
            font-weight 300
    p br ~ a.button
        margin-top 10px

.install-note
    color #999
    font-size 0.8rem
    font-weight normal
    margin-left 10px
    &:after
        display block
        content ""

.content--structured
    h2[id],
    h3[id],
    h4[id],
    h5[id],
    h6[id]
        cursor pointer
        position relative
        &:before
            border-bottom 1px solid #fff
            color #ccc
            content ""
            height 100%
            left -1.5rem
            position absolute
            text-indent 0
            width 1.5rem
        &:target,
        &:hover
            &:before
                content "#"
        &:hover
            &:before
                color #aaa

.sidebar-mobile
    display none

@media screen and (max-width: 800px)
    .sidebar
        order 1  // Move to bottom
        padding 0
        width 100%

        .list
            padding 20px

        .nav
            border 0
            margin-bottom 0
            padding 20px 0 0

    .secondary-nav
        background $pink
        // margin-top -4px  // To line things up when we jump
        padding 20px

    .logo__wordmark
        background url(../images/aframe-name-white.svg) 0 50% no-repeat
        background-size contain
        height 35px
        margin-bottom 0

    .sidebar-mobile
        background $pink
        display block
        position relative
        padding 20px

    .mobile-nav-btn
        background-color white
        border 3px solid white
        color #000
        display inline-block
        float right
        font-size 15px
        font-weight 300px
        letter-spacing 0.05rem
        text-align center
        transition 0.05s ease-in
        text-transform uppercase
        padding 8px 30px
        position relative
        z-index 1
        &:hover,
        &:active
            color #000
            opacity 0.8
        &:active
            background-color rgba(0,0,0,.5)

    .nav-link
        padding 0.1rem
        &.current,
        &.active,
        &.current:hover,
        &.active:hover
            color $white

    .main
        flex-direction column
        min-width 100%

    .copy .footnote
        br
            display inline-block

        .github-file-link
            margin-left 0

    .content--structured
        h2[id],
        h3[id],
        h4[id],
        h5[id],
        h6[id]
            &:before
                left: -1rem

    .section-title
        position relative
        &:before
            background url(../images/caret.svg) -3px 6px no-repeat
            background-size 10px auto
            content ""
            height 100%
            left 0
            pointer-events none
            position absolute
            top 0
            width 10px

    .section-title-active:before
        transform rotate(90deg)
        left -6px

    .section-title-inactive + .section-subnav
        display none

    .section-title-link
        padding-left 20px

    .subnav-item
        margin-left 20px
        margin-right -20px

    .subnav-link
        margin-left -25px
        padding-left 35px

#toc a
    border-bottom 0

video
    max-width 100%
